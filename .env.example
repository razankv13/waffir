# Copy this file to one of:
# - .env.dev
# - .env.staging
# - .env.production
#
# NOTE: These environment files are gitignored (secrets). Only `.env.example` is committed.

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_ANON_KEY=

# -----------------------------------------------------------------------------
# Auth backend switching
# -----------------------------------------------------------------------------
# When true, auth flow is fully mocked (OTP/OAuth/profile) with no backend calls.
# When false, repositories should call the real backend endpoints (cloud functions).
USE_MOCK_AUTH=true

# When true, deals screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_DEALS=true

# When true, stores screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_STORES=true

# Optional: force the Stores screen into an error state (useful for UI testing).
FORCE_STORES_ERROR=false

# -----------------------------------------------------------------------------
# Social Login (required when USE_MOCK_AUTH=false)
# -----------------------------------------------------------------------------
# Google OAuth client IDs
GOOGLE_CLIENT_ID_IOS=
GOOGLE_CLIENT_ID_WEB=
# Optional (Android usually doesn't require this in Dart code)
GOOGLE_CLIENT_ID_ANDROID=

# Apple (if using native Sign in with Apple)
APPLE_CLIENT_ID=

# -----------------------------------------------------------------------------
# Deep Links (OAuth redirects / invite links)
# -----------------------------------------------------------------------------
DEEP_LINK_SCHEME=fluttertemplate
DEEP_LINK_HOST=app

# -----------------------------------------------------------------------------
# Optional: API base URL (legacy; not used for Supabase auth)
# -----------------------------------------------------------------------------
# API_BASE_URL=https://your-api.example.com
