# Copy this file to one of:
# - .env.dev
# - .env.staging
# - .env.production
#
# NOTE: These environment files are gitignored (secrets). Only `.env.example` is committed.

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_ANON_KEY=

# -----------------------------------------------------------------------------
# Auth backend switching
# -----------------------------------------------------------------------------
# When true, auth flow is fully mocked (OTP/OAuth/profile) with no backend calls.
# When false, repositories should call the real backend endpoints (cloud functions).
USE_MOCK_AUTH=true

# When true, deals screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_DEALS=true

# When true, stores screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_STORES=true

# Optional: force the Stores screen into an error state (useful for UI testing).
FORCE_STORES_ERROR=false

# When true, alerts screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_ALERTS=true

# When true, favorites screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_FAVORITES=true

# When true, profile/settings screens use mocked data sources.
# When false, repositories should call Supabase-backed data sources (once deployed).
USE_MOCK_PROFILE=true

# -----------------------------------------------------------------------------
# Push Notifications
# -----------------------------------------------------------------------------
# When true, Firebase and push notifications are enabled.
# Requires proper Firebase setup (firebase_options.dart, google-services.json, etc.)
ENABLE_NOTIFICATIONS=false

# -----------------------------------------------------------------------------
# Social Login (required when USE_MOCK_AUTH=false)
# -----------------------------------------------------------------------------
# Google OAuth client IDs (from Google Cloud Console)
# Format: xxxxxxxxx-xxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
# iOS Client ID: Used for Google Sign-In on iOS devices
GOOGLE_CLIENT_ID_IOS=
# Web Client ID: Used by Supabase for server-side token verification
GOOGLE_CLIENT_ID_WEB=
# Android Client ID (optional - package name association handled by SHA fingerprints)
GOOGLE_CLIENT_ID_ANDROID=

# Apple Sign-In (Service ID identifier from Apple Developer Portal)
# Format: com.yourcompany.app.service (or your bundle ID)
# Note: Also requires private key (.p8) configured in Supabase Dashboard
APPLE_CLIENT_ID=

# -----------------------------------------------------------------------------
# Deep Links (OAuth redirects / invite links)
# -----------------------------------------------------------------------------
DEEP_LINK_SCHEME=waffir
DEEP_LINK_HOST=app

# -----------------------------------------------------------------------------
# Optional: API base URL (legacy; not used for Supabase auth)
# -----------------------------------------------------------------------------
# API_BASE_URL=https://your-api.example.com
